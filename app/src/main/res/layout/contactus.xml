<RelativeLayout android:layout_width="350dp"
    android:layout_height="350dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/vigbg"

    >

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.5"
        android:background="#ffffff"></View>
<LinearLayout android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<TextView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:text="X"
    android:id="@+id/close"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_gravity="end"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/circlebg"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/vig2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/vig2"

            >
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Vignesh"
            android:textStyle="bold"
            android:textColor="#000000"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7b020202"
        android:layout_marginRight="20dp"
        android:orientation="vertical"

        android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp" android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/makecall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/call" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9597109700"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp" android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mail" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="vignesh2677@gmail.com"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:padding="5dp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>